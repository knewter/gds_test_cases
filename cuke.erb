<% status = (params["RequestIdentifier"] == 'B' ? 'Change' : 'Status') %>
<%= "Scenario: " +  params["Test"] %>
<%= "  Given an applicant loaded from file " + '"' + params["Test"] + ".xml" + '"' %>
<%= "  When the applicant is sent to processes_application" %>
<%= '  Then the result should have key "' + status + '" set to "' + params["Change"].to_s + '"' %>
<% if params["NOAA Reason1"].to_s == "" %><%= '    And the result should have key "AdverseReasons" that is nil' %>
<% else %><%= '    And the result should have key "AdverseReasons" that is not nil' %>
<%= '    And the result should have AdverseReason "' + params["NOAA Reason1"] + '"' %>
<% end %><% if params["Block Code 1"].to_s != "" %><%= '    And the result should have key "BlockCode1" set to "' + params["Block Code 1"].to_s + '"' %><% end %>
<% if params["Block Code 2"].to_s != "" %><%= '    And the result should have key "BlockCode2" set to "' + params["Block Code 2"].to_s + '"' %><% end %>
<% if params["Tier"].to_s != "" %><%= '    And the result should have key "RiskTier" set to "' + params["Tier"].to_s + '"' %><% end %>
<% if params["DDLevel"].to_s != "" %><%= '    And the result should have key "DDLevel" set to "' + params["DDLevel"].to_s + '"' %><% end %>
<% if params["Repayments"].to_s != "" %><%= '    And the result should have key "NbrRepayments" set to "' + params["Repayments"].to_s + '"' %><% end %>
<% if params["LOC"].to_s != "" %><%= '    And the result should have key "CreditLine" set to "' + params["LOC"].to_s + '.00"' %><% end %>
<%= '    And the result should not have any ErrorCodes' %>
